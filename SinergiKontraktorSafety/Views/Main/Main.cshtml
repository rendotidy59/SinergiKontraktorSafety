    <script src="/js/site.js"></script>




    <!-- Vendor Scripts -->

    <script src="/vendor/libs/apex-charts/apexcharts.js"></script>





    <!-- Main JS-->
    <script src='/js/main.js'></script>

    <!-- Page Scripts-->

    <script src="/js/dashboards-analytics.js"></script>


    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>


    <!-- Visual Studio Browser Link -->
    <script type="text/javascript" src="/_vs/browserLink" async="async" id="__browserLink_initializationData" data-requestId="4faee97160ec42cb986d30a2511233ab" data-requestMappingFromServer="false" data-connectUrl="http://localhost:64004/38a69b09f55c4bed9fd913a240762348/browserLink"></script>
    <!-- End Browser Link -->
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector("form").addEventListener("submit", function (event) {
                document.querySelector("#submit-btn").classList.add("d-none");
                document.querySelector(".btn-loading").classList.remove("d-none");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
