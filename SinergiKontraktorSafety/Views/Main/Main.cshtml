                            </li>
                        </ul>
                    </li>

                    <!-- Components -->
                    <li class="menu-header fw-medium mt-4"><span class="menu-header-text">Menu</span></li>
                    <!-- Cards -->
                    <!-- User interface -->
                    <li class='menu-item'>
                        <a href="javascript:void(0)" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons mdi mdi-archive-outline"></i>
                            <div>VSL</div>
                        </a>
                        <ul class="menu-sub">
                            <li class='menu-item'>
                                <a class="menu-link" href="/CSMS/SOT">
                                    <div>Safety Observation Tour (SOT)</div>
                                </a>
                            </li>
                            <li class='menu-item'>
                                <a class="menu-link" href="/CSMS/HazardReport">
                                    <div>Hazard Report</div>
                                </a>
                            </li>
                            <li class='menu-item'>
                                <a class="menu-link" href="/CSMS/ToolboxMeeting">
                                    <div>Toolbox Meeting</div>
