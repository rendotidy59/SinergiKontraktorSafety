@model SinergiKontraktorSafety.Models.DomainAdd.AddUserViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section Style
{
    <link rel="stylesheet" href="/css/demo.css" />
}

<div class="authentication-wrapper authentication-cover">
    <!-- Logo -->
  
    <!-- /Logo -->
    <div class="authentication-inner row m-0" style="padding-top: 12rem;">
        <!-- /Left Section -->
        <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center justify-content-center p-5 pb-2">
           
           
        </div>
        <!-- /Left Section -->
        <!-- Login -->
        <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg position-relative py-sm-5 px-4 py-4">
            <div class="w-px-400 mx-auto pt-5 pt-lg-0">
                <h4 class="mb-2">Welcome! 👋</h4>
                <p class="mb-4">Please sign-in to your account and start the Observation</p>

                <form class="mb-3" action="/Home/LoginUser" method="post">
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="text" class="form-control" id="email" asp-for="email" placeholder="Enter your email or username" required autofocus>
                        <label for="email">Email or Username</label>
                    </div>
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="password" class="form-control" id="email" asp-for="password" placeholder="password" required>
                        <label for="email">password</label>
                    </div>
                    <div class="mb-3 d-flex justify-content-between flex-wrap">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember-me">
                            <label class="form-check-label me-2" for="remember-me">
                                Remember Me
                            </label>
                        </div>
                        <a href="auth-forgot-password-cover.html" class="float-end mb-1">
                            <span>Forgot Password?</span>
                        </a>
                    </div>
                    <button type="submit" class="btn btn-primary d-grid w-100 btn-kirim" id="submit-btn">
                        
                        Sign in
                    </button>

                    <button type="submit" class="btn btn-info w-100 mt-4 mb-0 btn-loading d-none" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Data Sedang Diproses...
                    </button>
                </form>

                <p class="text-center mt-2">
                    <span>New on our platform?</span>
                    <a href="auth-register-cover.html">
                        <span>Create an account</span>
                    </a>
                </p>

              

                <div class="d-flex justify-content-center gap-2">
                  
                </div>
            </div>
        </div>
        <!-- /Login -->
    </div>
</div>




@section Scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector("form").addEventListener("submit", function (event) {
                document.querySelector("#submit-btn").classList.add("d-none");
                document.querySelector(".btn-loading").classList.remove("d-none");
            });
        });
    </script>
}